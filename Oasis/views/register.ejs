    <div class="container">
    <p>New User Registration</p>

    <p>Account Information (all fields are mandatory) Already have an account? <a href="/login">Sign in here.</a></p>

    <form action="/register" method="POST" class="needs-validation">
      <!-- <form> -->

      <div class="form-group">
        <label for="validationTooltip01">Name</label>
        <input name="name", type="validationServer01" class="form-control" id="validationTooltip01" required>
        <div class="invalid-tooltip">
          Please write your name.
        </div>
      </div>

      <div class="form-group">
        <label for="validationTooltip02">Email</label>
        <input name="email", type="validationServer02" class="form-control" id="validationTooltip02" aria-describedby="emailHelp" required>
        <div class="invalid-tooltip">
          Please provide a valid email.
        </div>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>

      <div class="form-group">
        <label for="validationTooltip03">Password</label>
        <input name="password", type="password" class="form-control" id="validationTooltip03" required>
        <div class="invalid-tooltip">
          Please provide a password.
        </div>
      </div>

      <button type="submit" class="btn btn-primary" style="background-color:#5F3F91; border-color: #5F3F91;">Register</button>
    </form> 
